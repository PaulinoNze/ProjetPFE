<!DOCTYPE html>
<html>
<head>
    <title>Ajouter un cours</title>
</head>
<body>
    <h2>Ajouter un cours</h2>
    <form action="" method="post" enctype="multipart/form-data">
        <label for="titre">Titre du cours:</label><br>
        <input type="text" id="titre" name="titre"><br><br>
        
        <label for="pdf">PDF:</label><br>
        <input type="file" id="pdf" name="pdf"><br><br>
        
        <label for="video">Vidéo:</label><br>
        <input type="file" id="video" name="video"><br><br>
        
        <label for="image">Image:</label><br>
        <input type="file" id="image" name="image"><br><br>
        
        <input type="submit" value="Ajouter le cours" name="submit">
    </form>

    <?php
    // Inclusion du fichier de connexion à la base de données
    include '../connexion_bdd.php';

    if(isset($_POST['submit'])) {
        $titre = $_POST['titre'];
        $pdf_name = $_FILES['pdf']['name'];
        $pdf_tmp_name = $_FILES['pdf']['tmp_name'];
        $video_name = $_FILES['video']['name'];
        $video_tmp_name = $_FILES['video']['tmp_name'];
        $image_name = $_FILES['image']['name'];
        $image_tmp_name = $_FILES['image']['tmp_name'];

        // Déplacez les fichiers téléchargés vers le dossier de destination
        move_uploaded_file($pdf_tmp_name, "uploads/pdf/".$pdf_name);
        move_uploaded_file($video_tmp_name, "uploads/videos/".$video_name);
        move_uploaded_file($image_tmp_name, "uploads/images/".$image_name);

        // Enregistrez les détails du cours dans la base de données
        $requete = "INSERT INTO cours (titre, pdf, video, image) VALUES ('$titre', '$pdf_name', '$video_name', '$image_name')";

        if ($connexion->query($requete) === TRUE) {
            echo "Le cours a été ajouté avec succès!";
        } else {
            echo "Erreur lors de l'ajout du cours: " . $connexion->error;
        }
    }
    ?>
</body>
</html>
